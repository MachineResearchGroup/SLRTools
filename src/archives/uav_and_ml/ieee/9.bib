@INPROCEEDINGS{8027884,
author={Yijing, Zhao and Zheng, Zheng and Xiaoyi, Zhang and Yang, Liu},
booktitle={2017 36th Chinese Control Conference (CCC)}, title={Q learning algorithm based UAV path learning and obstacle avoidence approach},
year={2017},
