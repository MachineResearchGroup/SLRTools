@INPROCEEDINGS{7801746,
author={Giyenko, Andrey and Cho, Young Im},
booktitle={2016 Joint 8th International Conference on Soft Computing and Intelligent Systems (SCIS) and 17th International Symposium on Advanced Intelligent Systems (ISIS)}, title={Intelligent Unmanned Aerial Vehicle Platform for Smart Cities},
