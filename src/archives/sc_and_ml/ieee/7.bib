@ARTICLE{9324830,
author={Prado-Rujas, Ignacio-Iker and García-Dopico, Antonio and Serrano, Emilio and Pérez, María S.},
journal={IEEE Access}, title={A Flexible and Robust Deep Learning-Based System for Solar Irradiance Forecasting},
year={2021},
