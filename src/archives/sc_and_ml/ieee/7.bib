@INPROCEEDINGS{8615294,
author={Roy, Bipraneel and Cheung, Hon},
booktitle={2018 28th International Telecommunication Networks and Applications Conference (ITNAC)}, title={A Deep Learning Approach for Intrusion Detection in Internet of Things using Bi-Directional Long Short-Term Memory Recurrent Neural Network},
