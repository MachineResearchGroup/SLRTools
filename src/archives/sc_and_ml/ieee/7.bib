@ARTICLE{9270026,
author={Zhou, Chaoran and Zhao, Jianping and Ren, Chenghao},
journal={IEEE Access}, title={SUDIR: An Approach of Sensing Urban Text Data From Internet Resources Based on Deep Learning},
year={2020},
