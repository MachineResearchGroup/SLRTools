keywords={Mathematical model;Analytical models;Vehicle dynamics;Robots;Uncertainty;System dynamics;Numerical models;Automation technologies for smart cities;deep learning in robotics and automation;deep reinforcement learning;intelligent transportation systems},
doi={10.1109/TRO.2021.3087314},
