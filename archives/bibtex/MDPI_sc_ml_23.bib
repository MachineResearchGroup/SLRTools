@Article{sym13061011,
AUTHOR = {Adnan, Ahmed and Muhammed, Abdullah and Abd Ghani, Abdul Azim and Abdullah, Azizol and Hakim, Fahrul},
TITLE = {An Intrusion Detection System for the Internet of Things Based on Machine Learning: Review and Challenges},
JOURNAL = {Symmetry},
