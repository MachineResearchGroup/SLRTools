@Article{s21113640,
AUTHOR = {Benhamida, Fatima Zohra and Navarro, Joan and Gómez-Carmona, Oihane and Casado-Mansilla, Diego and López-de-Ipiña, Diego and Zaballos, Agustín},
TITLE = {PyFF: A Fog-Based Flexible Architecture for Enabling Privacy-by-Design IoT-Based Communal Smart Environments},
JOURNAL = {Sensors},
