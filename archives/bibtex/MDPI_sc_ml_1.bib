@Article{su132111772,
AUTHOR = {Nawaz, Afifa and Zafar, Nazir Ahmad and Alkhammash, Eman H.},
TITLE = {Formal Modeling of Responsive Traffic Signaling System Using Graph Theory and VDM-SL},
JOURNAL = {Sustainability},
