@Article{math9161836,
AUTHOR = {Martínez, Rocío G. and Carrasco, Ramon A. and Sanchez-Figueroa, Cristina and Gavilan, Diana},
TITLE = {An RFM Model Customizable to Product Catalogues and Marketing Criteria Using Fuzzy Linguistic Models: Case Study of a Retail Business},
JOURNAL = {Mathematics},
VOLUME = {9},
