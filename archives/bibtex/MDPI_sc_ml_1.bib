}



@Article{su13147960,
AUTHOR = {Omotayo, Temitope and Moghayedi, Alireza and Awuzie, Bankole and Ajayi, Saheed},
TITLE = {Infrastructure Elements for Smart Campuses: A Bibliometric Analysis},
JOURNAL = {Sustainability},
VOLUME = {13},
