@ARTICLE{8698453,
author={Wang, Cheng and Niepert, Mathias and Li, Hui},
journal={IEEE Transactions on Neural Networks and Learning Systems}, title={RecSys-DAN: Discriminative Adversarial Networks for Cross-Domain Recommender Systems},
year={2020},
