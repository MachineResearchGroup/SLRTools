author = {Mohab Aly and Foutse Khomh and Soumaya Yacout},
keywords = {Empirical Study, Internet of Things, Industry 4.0, Stack Overflow, Stack Exchange, Topic Modeling},
abstract = {Internet of Things and Industry 4.0–related discussions have become increasingly prevalent on several online Q&A websites in recent years. Analyzing and understanding such discussions could provide practitioners with more insights into various trends in the evolution of topics of interest and help different research communities, including software development and industrial sectors, better understand the needs and challenges facing practitioners as they operate in these fields. We conduct an exploratory study to capture and compare the popularity as well as the effect of the discussion topics on the domain across such communities. We use extracted data from popular online Q&A websites, such as Stack Exchange, and investigate 176,819 posts to investigate what practitioners are asking and looking for. We also use Machine Learning for Language Toolkit (MALLET) based–Latent Dirichlet Allocation (LDA) topic models to help summarize Internet of Things/Industry 4.0–related questions, identify the most challenging popular related issues, explore specific issues of the Internet of Things/Industry 4.0, and investigate the types of questions that practitioners ask about. We summarize all the topics into various categories and evaluate the popularity and difficulty of various topics as well. Our findings help to highlight the challenges facing the Internet of Things/Industry 4.0 practitioners which in the future would require more attention from various research and software development communities and develop new approaches to analyzing questions posed on various Q&A forums.}
}
@article{ROYIMANI2019215,
title = {Distribution of Parthenium hysterophoru L. with variation in rainfall using multi-year SPOT data and random forest classification},
journal = {Remote Sensing Applications: Society and Environment},
volume = {13},
pages = {215-223},
year = {2019},
issn = {2352-9385},
doi = {https://doi.org/10.1016/j.rsase.2018.11.007},
url = {https://www.sciencedirect.com/science/article/pii/S2352938518301848},
author = {Lwando Royimani and Onisimo Mutanga and John Odindi and Kiala Serge Zolo and Mbulisi Sibanda and Timothy Dube},
keywords = {Parthenium, SPOT data, KwaZulu-Natal, Land use/cover change},
abstract = {Detecting the spatial and temporal distribution of weeds such as parthenium (Parthenium hysterophorus L.) is crucial to facilitate the management and mitigation of their spread. The availability of historical remotely sensed data with fine spatial resolution from the SPOT mission offer greater prospects to effectively manage and monitor the spread of such weeds. This study sought to determine the spatial and temporal distribution of parthenium with variation in rainfall using multi-year SPOT data and Random Forest classification algorithm. Findings show that parthenium spread in the region is influenced by both rainfall and land use change. Generally, parthenium has been decreasing over the 10-year period of the study and this can be attributed to the low rainfall experienced during this period. Similarly, the sharp incline in parthenium spread in 2016 is attributed to the high rainfall in December that year leading to increased invasion on vacant or bare areas. The low rainfall has not only affected the distribution of parthenium but also of other vegetation classes such as grassland, thereby increasing the area of bare soils. Moreover, increased parthenium spread has been recorded from areas with frequently disturbed soils, as opposed to areas of infrequent soil manipulation. The readily available SPOT data, when used in concert with robust and advance non-parametric Random Forest and vegetation indices has enabled an affordable large scale and long-term mapping of the aggressive parthenium on crop and rangelands environments.}
}
