issn = {0168-1699},
doi = {https://doi.org/10.1016/j.compag.2016.04.032},
url = {https://www.sciencedirect.com/science/article/pii/S016816991630179X},
author = {Rillian Diello Lucas Pires and Diogo Nunes Gonçalves and Jonatan Patrick Margarido Oruê and Wesley Eiji Sanches Kanashiro and Jose F. Rodrigues and Bruno Brandoli Machado and Wesley Nunes Gonçalves},
