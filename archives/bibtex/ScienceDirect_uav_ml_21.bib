url = {https://www.sciencedirect.com/science/article/pii/S240589632101867X},
author = {Nikolay P. Fuchedzhi and Elena S. Baryshnikova and Vladimir A. Ivashchenko and Dmitry A. Vasiliev},
keywords = {fuzzy hybrid systems, neuro-fuzzy system, control system, continuous production},
abstract = {We propose a concept of models based on fuzzy neural networks to maintain the stability of complex continuous technological processes. The fuzzy neural network combines the methods of fuzzy logic and the apparatus of artificial neural networks. Based on the signals received from sensors and operators, the system issues a forecast of the risk of destabilizing the process and recommendations for actions to prevent these situations. We propose the structure and composition of a neural network based on the Takagi-Sugeno-Kanga system model for the implementation of such systems. The hybrid algorithm is used to train the network. In this case, the refinement of the parameters is carried out in two stages. At the first stage, the parameters of the first layer are fixed and the linear parameters of the polynomials of the third Takagi-Sugeno-Kanga layer are calculated. At the second stage, the linear parameters of the polynomials of the third layer are fixed and the nonlinear parameters of the first layer are refined. As an example of continuous flow manufacturing we looked at the process of making flat glass. The production of sheet glass is a complex, energy-intensive process with a large number of fuzzy quality parameters. Currently, the proposed network is being tested on the data of JSC «Saratovstroysteklo». The test results show the practicability of using the results obtained in the continuous production management system. Hybrid network training is an ongoing process, so the proposed model will adapt to changing production parameters. This will allow using this network on other similar technological lines to maintain the stability of their work.}
}
@article{LONG2022106494,
title = {A multi-feature fusion transfer learning method for displacement prediction of rainfall reservoir-induced landslide with step-like deformation characteristics},
