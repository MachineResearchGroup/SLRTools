@Article{fi11010013,
AUTHOR = {Silva, Marianne and Signoretti, Gabriel and Oliveira, Julio and Silva, Ivanovitch and Costa, Daniel G.},
TITLE = {A Crowdsensing Platform for Monitoring of Vehicular Emissions: A Smart City Perspective},
JOURNAL = {Future Internet},
