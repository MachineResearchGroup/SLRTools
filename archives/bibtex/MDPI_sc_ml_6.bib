@Article{s19020353,
AUTHOR = {Saralegui, Unai and Antón, Miguel Ángel and Arbelaitz, Olatz and Muguerza, Javier},
TITLE = {Smart Meeting Room Usage Information and Prediction by Modelling Occupancy Profiles},
JOURNAL = {Sensors},
