@inproceedings{10.1145/3093742.3093922,
author = {Yadav, Piyush and ul Hassan, Umair and Hasan, Souleiman and Curry, Edward},
title = {The Event Crowd: A Novel Approach for Crowd-Enabled Event Processing},
year = {2017},
isbn = {9781450350655},
publisher = {Association for Computing Machinery},
