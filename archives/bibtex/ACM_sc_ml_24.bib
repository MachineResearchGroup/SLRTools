@inproceedings{10.1145/3055031.3055088,
author = {Han, Jun and Chung, Albert Jin and Tague, Patrick},
title = {Pitchln: Eavesdropping via Intelligible Speech Reconstruction Using Non-Acoustic Sensor Fusion},
year = {2017},
