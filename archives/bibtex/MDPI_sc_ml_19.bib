@Article{info10060193,
AUTHOR = {Huang, Zihao and Huang, Gang and Chen, Zhijun and Wu, Chaozhong and Ma, Xiaofeng and Wang, Haobo},
TITLE = {Multi-Regional Online Car-Hailing Order Quantity Forecasting Based on the Convolutional Neural Network},
JOURNAL = {Information},
